@model MvcUserRoles.ViewModels.MessageFormViewModel

@{
    ViewBag.Title = "CreateMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Send your Message</h2>

@using (Html.BeginForm("SaveMessage", "Home"))
{
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { htmlAttributes=new { @class = "text-danger"} })

        @Html.HiddenFor(model => model.receiverid)
        @Html.HiddenFor(model => model.dateofmessage)
        @Html.HiddenFor(model => model.propertyid)

        <div class="form-group" style="width:60%; margin:auto">
            <div>
                @Html.TextAreaFor(model => model.body, new { htmlAttributes = new { @class = "form-control" }, style = "width:100%;  height:90px;",placeholder="Ask the host anything." })
                @Html.ValidationMessageFor(model => model.body, "", new { @class = "text-danger" })

            </div>
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>

    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
